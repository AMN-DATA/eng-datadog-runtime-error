{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2020"
  },
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": [
    "**/.*/",
    "**/node_modules",
    "**/dist",
  ]
}
